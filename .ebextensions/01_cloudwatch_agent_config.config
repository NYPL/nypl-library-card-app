files:
  '/opt/elasticbeanstalk/hooks/appdeploy/pre/49_change_permissions.sh' :
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      sudo chown -R ec2-user:ec2-user tmp/
  '/etc/awslogs/config/application_log.conf' :
    mode: "000444"
    owner: root
    group: root
    content: |
      [application_log]
      file = /var/app/current/log/get_a_library_card.log*
      log_group_name = `{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/app/current/log/get_a_library_card.log"]]}`
      log_stream_name = {instance_id}

commands:
  restart_awslogs:
    command: service awslogs restart
